{
  "name": "dollar-store-kids",
  "version": "1.0.0",
  "description": "Dollar Store Kids smart contracts",
  "repository": {
    "type": "git"
  },
  "scripts": {
    "hardhat": "hardhat",
    "clean": "hardhat clean",
    "compile": "hardhat compile",
    "build": "npm run clean && npm run compile",
    "coverage": "hardhat coverage",
    "deploy": "hardhat deploy",
    "deploy:dsk":"hardhat deploy --tags 'DollarStoreKidsV2'",
    "fork": "hardhat node --no-deploy",
    "generate-abi": "hardhat generate-abi",
    "postinstall": "hardhat typechain && patch-package",
    "test": "hardhat test",
    "solhint": "solhint './contracts/**/*.sol'",
    "solhint:fix": "prettier --write 'contracts/**/*.sol'",
    "eslint": "eslint ./test/*",
    "eslint:fix": "eslint --fix ./test --ext .ts"
  },
  "devDependencies": {
    "@anders-t/ethers-ledger": "^1.0.4",
    "@nomicfoundation/hardhat-toolbox": "^2.0.0",
    "@openzeppelin/contracts": "4.7.0",
    "@types/mocha": "^10.0.1",
    "@typescript-eslint/eslint-plugin": "^5.48.2",
    "@typescript-eslint/parser": "^5.48.2",
    "chai": "^4.3.7",
    "dotenv": "^16.0.3",
    "eslint": "^8.32.0",
    "eslint-config-standard": "^17.0.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-mocha-no-only": "^1.1.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "4.2.1",
    "eslint-plugin-promise": "^6.1.1",
    "eslint-plugin-standard": "^5.0.0",
    "hardhat": "^2.12.6",
    "hardhat-contract-sizer": "^2.7.0",
    "hardhat-deploy": "^0.11.22",
    "husky": "^8.0.3",
    "lint-staged": "^13.1.0",
    "mocha": "^10.2.0",
    "patch-package": "^6.5.1",
    "prettier": "^2.8.3",
    "prettier-plugin-solidity": "1.1.1",
    "solc": "0.8.15",
    "solhint": "^3.3.8",
    "solhint-plugin-prettier": "0.0.5",
    "ts-node": "^10.9.1",
    "typechain": "^8.1.1",
    "typescript": "^4.9.4"
  }
}
